<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_visit_document">
        <t t-call="web.external_layout">
            
            <div class="page">
                <div class="oe_structure"/>

                <h2 class="mt16">
                    <span>Visit</span>
                </h2>

                <div class="row mt32 mb32" id="informations">
                
                    <div class="col-auto col-3 mw-100 mb-2">
                        <strong>Visit:</strong>
                        <br/>
                        <p># <span t-field="doc.id" class="m-0" /></p>
                        <br/>
                        <span t-field="doc.start_time" class="m-0" /> - <span t-field="doc.end_time" class="m-0" />
                        <br/>
                        <span t-field="doc.visit_duration" class="m-0" />
                    </div>

                    <div class="col-auto col-3 mw-100 mb-2">
                        <strong>Patient:</strong>
                        <span t-field="doc.patient.partner_id"
                            t-options='{"widget": "contact", "fields": ["name", "address"], "no_marker": True}' />
                        <span t-field="doc.patient.partner_id.id" class="m-0" />
                    </div>

                </div> 

            </div>
        </t>
    </template>



    <template id="report_visit">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="patient_registration.report_visit_document" />
            </t>
        </t>
    </template>

</odoo>